
<%- include("../templates/encabezado")%>

<section class="layout">
    <div class="sidebar bg-dark col-sm-auto sticky-top"><%- include("../templates/menu")%></div>
    <div class="body">

        <div class="container py-4">
            <div class="row">
                

                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-6 offset-md-3">
                            <span class="anchor" id="formRegister"></span>
                            
                            <div class="card card-outline-secondary">
                                <div class="card-header">
                                    <h3 class="mb-0">Nuevo producto</h3>
                                </div>
                                <div class="card-body">
                                    <form action="/nuevoProducto" method="post" class="form" role="form" autocomplete="off" enctype="multipart/form-data">
                                        <input type="hidden" id="fechaIngreso" name="fechaIngreso">
                                        <input type="hidden" id="fechaEgreso" name="fechaEgreso">
                                        <div class="form-group">
                                            <label for="inputName">Nombre</label>
                                            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3">Descripcion</label>
                                            <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion" required="">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputEmail3">Categoria</label>
                                            <!-- <input type="text" class="form-control" id="descripcion" name="descripcion" placeholder="Descripcion" required=""> -->
                                            <fieldset class="form-control">
                                                <label style="margin-right: 15px;">
                                                    <input type="radio" name="categoria" value="pantalon"> Pantalon
                                                </label>
                                                <label style="margin-right: 15px;">
                                                    <input type="radio" name="categoria" value="falda"> Falda
                                                </label>
                                                <label style="margin-right: 15px;">
                                                    <input type="radio" name="categoria" value="camisa"> Camisa
                                                </label>
                                                <label style="margin-right: 15px;">
                                                    <input type="radio" name="categoria" value="sudadera"> Sudadera
                                                </label>
                                            </fieldset>
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPassword3">Precio</label>
                                            <input type="number" class="form-control" id="precio" name="precio" placeholder="Precio" min="0" required="">
                                        </div>
                                        <div class="form-group">
                                            <label for="inputPassword3">Stock</label>
                                            <input type="number" class="form-control" id="stock" name="stock" placeholder="Stock" min="0" required="">
                                        </div>
                                        
                                        <div class="form-group">
                                            <label for="inputVerify3">Foto</label>
                                            <input type="file" class="form-control" id="foto" name="foto" placeholder="Photo" required="">
                                        </div>
                                        <br>
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-success btn-lg float-right">Register Product</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
  </section>

<%- include("../templates/pie")%>